<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_product1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_cart_product_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Milk Tea"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_cart_product_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$3.75"
                        android:padding="4dp"
                        android:background="@drawable/texr_round"
                        android:textSize="16sp"
                        android:textStyle="bold"/>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_sugar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sugar: 100%"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textStyle="italic"/>

                        <TextView
                            android:id="@+id/txt_ice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ice: 100%"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textStyle="italic"/>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topping extras"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_topping_extra"
                android:text="Milk Cream"
                android:textStyle="italic"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>